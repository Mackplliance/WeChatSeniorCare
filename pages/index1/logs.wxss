.main {
    height: 1300rpx;
}

.top {
    width: 100%;
    height: 20rpx;
    background-color: #f5f5f5;
}

.log-list {
    display: flex;
    flex-direction: column;
    padding: 40rpx;
}

.log-item {
    margin: 10rpx;
}

.card-group {
    height: 1350rpx;
    display: flex;
    flex-direction: column;
    /* 这里可以设置内容区域的样式 */
    overflow-y: auto;

}

.card1 {
    width: 770rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
}
.card-title{
    font-size: 35rpx;
    width: 300rpx;
    height: 50rpx;
}
.card {
    display: flex;
    border: 0px solid #ccc;
    border-radius:20rpx;
    padding: 5rpx;
    margin-bottom: 5rpx;
    box-sizing: border-box;
}

.card-image {
    height: 220rpx;
    object-fit: cover;
    border-radius: 20rpx;
}

.card-description {
    font-size: 25rpx;
    color: #666;
    margin-top: 10rpx;
    border: 0;
}

.footer {
    height: 100rpx;
    background-color: #f5f5f5;
    position: relative;
}
.text {
    font-size: 25rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    /* 设置水平居中对齐 */
}