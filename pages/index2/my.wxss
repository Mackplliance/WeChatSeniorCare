/* pages/four/four.wxss */
.interact-container {
    position: relative;
    min-height: 100vh;
    background-color: #f1f0f0;
}

/* 头部 */
.info-box {
    position: relative;
    width: 750rpx;
    height: 400rpx;
}

.bg-img {
    width: 100%;
    height: 100%;
}

.info-inner {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    position: absolute;
    top: 150rpx;
    left: 30rpx;
}

.info-inner image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.info-rbox {
    font-size: 28rpx;
    color: #fff;
}

.info-rbox text:first-child {
    display: block;
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

/* 基金 */
.mid-box {
    width: 100%;
    position: absolute;
    top: 320rpx;
    padding: 0 30rpx;
}

.mid-inner {
    width: 90%;
    height: 100rpx;
    align-items: center;
    background-color: #fff;
    padding: 20rpx 10rpx;
    box-shadow: -2rpx 0 10rpx 2rpx rgba(97, 105, 119, 0.18);
    border-radius: 20rpx;
    margin: 0 0 30rpx;
    display: flex;
    justify-content: space-between;
}

.mid-lbox {
    width: 180rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.min-tt {
    color: #656565;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

.money {
    display: flex;
    display: inline;
    font-size: 50rpx;
    font-weight: bold;
}

.money text {
    font-size: 40rpx;
    font-weight: normal;
}

.btn {
    margin-left: 10rpx;
    width: 120rpx;
    height: 60rpx;
    border-radius: 26rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 60rpx;
    margin-bottom: 10rpx;
}

.red {
    color: #be0807;
}

.blue {
    color: #53bbe9;
}

.yellow {
    color: #d1ab1c;
}

.red-border {
    border: 1px solid #be0807;
}

.blue-border {
    border: 1px solid #53bbe9;
}

.yellow-border {
    border: 1px solid #d1ab1c;
}

.recommend-btn {
    border-radius: 40rpx;
    width: calc(100% - 60rpx);
    margin: 0 30rpx;
    position: absolute;
    bottom: 100rpx;
    background-color: #bf0606;
    height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 68rpx;
    border-radius: 0 solid red;
}
